@model List<LTTW_Library.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (@Model.Count == 0)
{
    <p>No customers in the library.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Phone #</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.First + " " + customer.Last, "Details", "Customer", new { id = customer.Id }, null)</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
            </tr>
        }
        </tbody>
    </table>
}



