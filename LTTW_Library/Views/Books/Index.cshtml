@model List<LTTW_Library.Models.Book>
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of books in the library</h2>

@if (@Model.Count == 0)
{
    <p>No books in the library.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Genre</th>
            <th>Pages</th>
            <th>Stock</th>
            <th>ISBN</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@Html.ActionLink(book.Id, "Details", "Books", new { id = book.Id }, null)</td>
                    <td>@Html.ActionLink(book.Title, "Details", "Books", new {id = book.Id}, null)</td>
                    <td>@book.Author</td>
                    <td>@book.Publisher</td>
                    <td>@book.Genre.Name</td>
                    <td>@book.Pages</td>
                    <td>@book.Stock</td>
                    <td>@book.Isbn</td>
                </tr>
            }
        </tbody>
    </table>
}



